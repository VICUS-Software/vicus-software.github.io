---
import PageLayout from '../../layouts/PageLayout.astro';
import TeamMember from '../../components/TeamMember.astro';
import { useTranslations, url } from '../../i18n/utils';

const lang = 'de';
const t = useTranslations(lang);

const teamMembers = [
  {
    name: 'Dr. Hauke Hirsch',
    title: 'Geschäftsführer (CEO)',
    image: '/images/team/hauke-hirsch.jpg',
    bio: 'Experte für Wärmenetz-Simulation und Softwareentwicklung. Hauke leitet VICUS Software mit Leidenschaft für Energieeffizienz und nachhaltige Energieversorgung.',
    email: 'hauke.hirsch@vicus-software.de'
  },
  {
    name: 'Dr. Andreas Nicolai',
    title: 'Technischer Leiter (CTO)',
    image: '/images/team/andreas-nicolai.jpg',
    bio: 'Entwickler des Solvers und der 3D-Engine. Andreas bringt jahrelange Erfahrung in numerischer Simulation und Softwarearchitektur mit.',
    email: 'andreas.nicolai@vicus-software.de'
  },
  {
    name: 'Dr. Christoph Morbitzer',
    title: 'Vertriebsleiter (CBDO)',
    image: '/images/team/christoph-morbitzer.jpg',
    bio: 'Verantwortlich für Business Development und Vertrieb. Christoph verbindet technisches Know-how mit Kundenorientierung.',
    email: 'christoph.morbitzer@vicus-software.de'
  },
  {
    name: 'Stephan Hirth',
    title: 'Software- & Simulationsexperte',
    image: '/images/team/stephan-hirth.jpg',
    bio: 'Zuständig für Grafik, Design und Softwareentwicklung. Stephan sorgt für eine intuitive Benutzeroberfläche und ansprechende Visualisierungen.',
    email: 'stephan.hirth@vicus-software.de'
  },
  {
    name: 'Heiko Fechner',
    title: 'Senior Simulationsexperte',
    image: '/images/team/heiko-fechner.jpg',
    bio: 'Mit über 30 Jahren Erfahrung in der Gebäudesimulation bringt Heiko wertvolle Expertise in komplexe Simulationsprojekte ein.',
    email: 'heiko.fechner@vicus-software.de'
  },
  {
    name: 'Dirk Weiß',
    title: 'Gebäudesimulationsexperte',
    image: '/images/team/dirk-weiss.jpg',
    bio: 'Spezialist für Gebäudesimulation und thermische Analysen. Dirk unterstützt bei der Entwicklung und Validierung unserer Simulationsmodelle.',
    email: 'dirk.weiss@vicus-software.de'
  }
];
---

<PageLayout
  title={t('page.team.title')}
  description="Lernen Sie das Team hinter VICUS Software kennen."
  heroSubtitle={t('page.team.subtitle')}
  heroCenter={true}
>
  <!-- Team Grid -->
  <section class="section">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <TeamMember
            name={member.name}
            title={member.title}
            image={member.image}
            bio={member.bio}
            email={member.email}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">{t('page.team.joinUs')}</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        {t('page.team.joinUsText')}
      </p>
      <a href={url(`/${lang}/karriere`)} class="btn btn-primary">
        {t('nav.careers')}
      </a>
    </div>
  </section>
</PageLayout>
