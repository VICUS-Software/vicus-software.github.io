---
import PageLayout from '../../layouts/PageLayout.astro';
import Features from '../../components/Features.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'de';
const t = useTranslations(lang);

const features = [
  {
    icon: 'network',
    title: 'Wärmenetzplanung',
    description: 'Effiziente Planung und Dimensionierung von Wärmeverteilnetzen für Quartiere und Städte.'
  },
  {
    icon: 'simulation',
    title: 'Thermohydraulische Simulation',
    description: 'Präzise Berechnung von Druckverlusten, Massenströmen und Temperaturen im Netz.'
  },
  {
    icon: 'gis',
    title: 'GIS-Integration',
    description: 'Nahtlose Verbindung mit Geodaten für standortbezogene Netzplanung.'
  },
  {
    icon: 'energy',
    title: 'Lastprofilanalyse',
    description: 'Ermittlung und Aggregation von Wärmebedarfsprofilen für optimale Netzauslegung.'
  },
  {
    icon: 'sustainability',
    title: 'Erneuerbare Integration',
    description: 'Einbindung von Solarthermie, Wärmepumpen und anderen erneuerbaren Quellen.'
  },
  {
    icon: 'comfort',
    title: 'Wirtschaftlichkeitsanalyse',
    description: 'Bewertung von Investitions- und Betriebskosten für fundierte Entscheidungen.'
  }
];

const networkTypes = [
  'Fernwärmenetze',
  'Nahwärmenetze',
  'Kalte Nahwärme',
  'Abwärmenutzung',
  'Sektorenkopplung',
  'Smart District Heating'
];
---

<PageLayout
  title="VICUS DISTRICTS"
  description="Software für Wärmenetzplanung und Quartiersenergie. Thermohydraulische Simulation und GIS-Integration."
  heroSubtitle="Spezialsoftware für Wärmenetze und Quartiersplanung"
>
  <!-- Screenshot Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-foreground mb-6">Intelligente Wärmenetzplanung</h2>
          <p class="text-foreground/70 mb-6">
            VICUS DISTRICTS ist die spezialisierte Lösung für die Planung und Simulation von Wärmenetzen.
            Von der ersten Konzeptphase bis zur detaillierten Netzauslegung unterstützt Sie die Software
            bei allen Schritten der Quartiersplanung.
          </p>
          <p class="text-foreground/70 mb-8">
            Die integrierte GIS-Funktionalität ermöglicht die direkte Arbeit mit Geodaten.
            Kombiniert mit der leistungsstarken thermohydraulischen Simulation erhalten Sie
            präzise Ergebnisse für Ihre Netzplanung.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/de/demo" class="btn btn-primary">{t('btn.demo')}</a>
            <a href="/de/tutorials-hilfe" class="btn btn-secondary">{t('btn.learnMore')}</a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-districts-main.png"
              alt="VICUS DISTRICTS Screenshot"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <Features
    title="Funktionen"
    subtitle="Spezialisierte Werkzeuge für effiziente Wärmenetzplanung"
    features={features}
  />

  <!-- Network Types -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-districts-network.png"
              alt="VICUS DISTRICTS Netzdarstellung"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="text-foreground mb-6">Netztypen</h2>
          <p class="text-foreground/70 mb-6">
            VICUS DISTRICTS unterstützt verschiedene Wärmenetzkonzepte und ermöglicht
            die Planung von zukunftsfähigen Energieversorgungslösungen.
          </p>
          <ul class="space-y-4">
            {networkTypes.map((type) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-foreground/80">{type}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">Jetzt VICUS DISTRICTS testen</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Entdecken Sie die Möglichkeiten der professionellen Wärmenetzplanung.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/de/demo" class="btn btn-primary">{t('btn.demo')}</a>
        <a href="/de/kontakt" class="btn btn-secondary">{t('btn.contact')}</a>
      </div>
    </div>
  </section>
</PageLayout>
