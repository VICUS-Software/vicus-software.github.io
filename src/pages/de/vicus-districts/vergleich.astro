---
import PageLayout from '../../../layouts/PageLayout.astro';
import SubNavigation from '../../../components/SubNavigation.astro';
import ComparisonTable from '../../../components/ComparisonTable.astro';
import { useTranslations, url } from '../../../i18n/utils';

const lang = 'de';
const t = useTranslations(lang);

const subNavItems = [
  { label: t('districts.overview'), href: url(`/${lang}/vicus-districts`) },
  { label: t('districts.features'), href: url(`/${lang}/vicus-districts/funktionen`) },
  { label: t('districts.license'), href: url(`/${lang}/vicus-districts/lizenz`) },
  { label: t('districts.onboarding'), href: url(`/${lang}/vicus-districts/onboarding`) },
  { label: t('districts.comparison'), href: url(`/${lang}/vicus-districts/vergleich`) },
  { label: t('districts.faq'), href: url(`/${lang}/vicus-districts/faq`) },
];

const comparisonItems = [
  { feature: 'Zielgruppe', values: ['Strategische Planung', 'Strategische Planung', 'Detailplanung'] },
  { feature: 'Netzzeichnung', values: ['Vereinfacht', 'Vereinfacht', 'Detailliert'] },
  { feature: 'GIS-Integration', values: [true, true, true] },
  { feature: 'Hydraulische Berechnung', values: ['Vereinfacht', 'Vereinfacht', 'Detailliert'] },
  { feature: 'Dynamische Simulation', values: [false, false, true] },
  { feature: 'Druckverlustberechnung', values: ['Abschätzung', 'Abschätzung', 'Exakt'] },
  { feature: 'Wärmeverlustberechnung', values: ['Abschätzung', 'Abschätzung', 'Dynamisch'] },
  { feature: 'Pumpendimensionierung', values: [false, false, true] },
  { feature: 'Massenauszug', values: [false, false, true] },
  { feature: 'Wirtschaftlichkeit', values: [true, true, 'Export'] },
];

const toolCategories = [
  {
    title: 'Strategische Planungstools',
    subtitle: 'nPro, Thermos und ähnliche',
    description: 'Diese Tools sind optimiert für frühe Planungsphasen und strategische Entscheidungen. Sie ermöglichen schnelle Abschätzungen der Wirtschaftlichkeit und erste Machbarkeitsstudien.',
    strengths: [
      'Schnelle Erstellung von Netzkonzepten',
      'Automatische Trassenfindung',
      'Integrierte Wirtschaftlichkeitsrechnung',
      'Gut für Fördermittelanträge'
    ],
    weaknesses: [
      'Vereinfachte hydraulische Modelle',
      'Keine dynamische Simulation',
      'Begrenzte Detailtiefe',
      'Keine präzise Auslegung möglich'
    ]
  },
  {
    title: 'Klassische Experten-Software',
    subtitle: 'STANET und ähnliche',
    description: 'Etablierte Software für Versorgungsnetze mit umfangreichen Berechnungsmöglichkeiten, aber steiler Lernkurve und komplexer Bedienung.',
    strengths: [
      'Sehr detaillierte Berechnungen',
      'Langjährige Entwicklung',
      'Umfangreiche Normenabdeckung',
      'Breiter Einsatzbereich (Gas, Wasser, Wärme)'
    ],
    weaknesses: [
      'Komplexe Bedienung',
      'Hoher Schulungsaufwand',
      'Veraltete Benutzeroberfläche',
      'Hohe Lizenzkosten'
    ]
  },
  {
    title: 'VICUS DISTRICTS',
    subtitle: 'Das Beste aus beiden Welten',
    description: 'VICUS DISTRICTS vereint intuitive Bedienung mit präziser dynamischer Simulation. Ideal für die detaillierte Auslegung von Wärmenetzen.',
    strengths: [
      'Intuitive, moderne Oberfläche',
      'Dynamische thermo-hydraulische Simulation',
      'Präzise Auslegung für jede Projektphase',
      'Flexible Lizenzmodelle',
      'Aktive Weiterentwicklung',
      'Persönlicher Support'
    ],
    weaknesses: [
      'Spezialisiert auf Wärmenetze',
      'Keine integrierte Wirtschaftlichkeitsrechnung (Export möglich)'
    ]
  }
];
---

<PageLayout
  title="Vergleich | VICUS DISTRICTS"
  description="Vergleich von VICUS DISTRICTS mit anderen Planungstools für Wärmenetze. Finden Sie die richtige Software für Ihre Anforderungen."
  showHero={false}
>
  <!-- Header -->
  <section class="pt-32 pb-8">
    <div class="container-custom text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Vergleich mit anderen Tools</h1>
      <p class="text-xl text-foreground/70 max-w-3xl mx-auto">
        Die richtige Software für die richtige Planungsphase: Verstehen Sie die Unterschiede zwischen strategischen
        Planungstools und detaillierter Auslegungssoftware.
      </p>
    </div>
  </section>

  <SubNavigation items={subNavItems} currentPath={Astro.url.pathname} />

  <!-- Introduction -->
  <section class="section">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card bg-primary/10 border-primary/30 mb-8">
          <h2 class="text-xl font-semibold text-foreground mb-4">Die richtige Software für jede Planungsphase</h2>
          <p class="text-foreground/70">
            Bei der Planung von Wärmenetzen kommen verschiedene Software-Tools zum Einsatz. Strategische Planungstools
            wie nPro oder Thermos eignen sich für erste Machbarkeitsstudien und Konzeptentwicklung. Für die detaillierte
            Auslegung und präzise hydraulische Berechnungen ist VICUS DISTRICTS die richtige Wahl.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  <ComparisonTable
    title="Funktionsvergleich"
    subtitle="Frühe Planungstools vs. VICUS DISTRICTS"
    headers={['nPro', 'Thermos', 'VICUS Districts']}
    items={comparisonItems}
    footnote="Stand: 2024. Angaben ohne Gewähr."
  />

  <!-- Tool Categories -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Detailanalyse</h2>
      </div>

      <div class="space-y-8">
        {toolCategories.map((category, index) => (
          <div class:list={[
            "card",
            index === toolCategories.length - 1 && "bg-primary/10 border-primary/30"
          ]}>
            <div class="flex flex-col lg:flex-row gap-8">
              <div class="lg:w-1/3">
                <h3 class="text-xl font-semibold text-foreground mb-1">{category.title}</h3>
                <p class="text-primary text-sm mb-4">{category.subtitle}</p>
                <p class="text-foreground/70">{category.description}</p>
              </div>

              <div class="lg:w-2/3 grid md:grid-cols-2 gap-6">
                <div>
                  <h4 class="text-sm font-semibold text-primary mb-3">Stärken</h4>
                  <ul class="space-y-2">
                    {category.strengths.map((strength) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-foreground/80">{strength}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div>
                  <h4 class="text-sm font-semibold text-foreground/50 mb-3">Einschränkungen</h4>
                  <ul class="space-y-2">
                    {category.weaknesses.map((weakness) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-foreground/30 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                        </svg>
                        <span class="text-foreground/60">{weakness}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why VICUS -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-foreground mb-4">Warum VICUS DISTRICTS wählen?</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Präzision ohne Komplexität</h3>
            <p class="text-foreground/70 text-sm">
              Dynamische Simulation und exakte Berechnungen, aber mit einer intuitiven Oberfläche,
              die den Einstieg erleichtert.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Moderne Entwicklung</h3>
            <p class="text-foreground/70 text-sm">
              Regelmäßige Updates, moderne Technologien und aktive Weiterentwicklung basierend
              auf Nutzerfeedback.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Persönlicher Support</h3>
            <p class="text-foreground/70 text-sm">
              Direkter Kontakt zu den Entwicklern, schnelle Hilfe bei Fragen und
              individuelle Schulungen.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Faire Preise</h3>
            <p class="text-foreground/70 text-sm">
              Flexible Lizenzmodelle, die sich an Ihre Projektgröße anpassen.
              Kostenlose Testversion und Bildungslizenzen.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">Überzeugen Sie sich selbst</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Testen Sie VICUS DISTRICTS 30 Tage kostenlos und vergleichen Sie selbst.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={url(`/${lang}/vicus-districts/onboarding`)} class="btn btn-primary">
          {t('districts.testLicense')}
        </a>
        <a href={url(`/${lang}/demo`)} class="btn btn-secondary">
          {t('btn.demo')}
        </a>
      </div>
    </div>
  </section>
</PageLayout>
