---
import PageLayout from '../../../layouts/PageLayout.astro';
import SubNavigation from '../../../components/SubNavigation.astro';
import { useTranslations, url } from '../../../i18n/utils';

const lang = 'de';
const t = useTranslations(lang);

const subNavItems = [
  { label: t('districts.overview'), href: url(`/${lang}/vicus-districts`) },
  { label: t('districts.features'), href: url(`/${lang}/vicus-districts/funktionen`) },
  { label: t('districts.license'), href: url(`/${lang}/vicus-districts/lizenz`) },
  { label: t('districts.onboarding'), href: url(`/${lang}/vicus-districts/onboarding`) },
  { label: t('districts.comparison'), href: url(`/${lang}/vicus-districts/vergleich`) },
  { label: t('districts.faq'), href: url(`/${lang}/vicus-districts/faq`) },
];
---

<PageLayout
  title="Onboarding | VICUS DISTRICTS"
  description="Starten Sie mit VICUS DISTRICTS: 30-Tage-Testlizenz, Easy Onboarding und individueller Support."
  showHero={false}
>
  <!-- Header -->
  <section class="pt-32 pb-8">
    <div class="container-custom">
      <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Einstieg & Support</h1>
      <p class="text-xl text-foreground/70 max-w-3xl">
        Wir begleiten Sie von der ersten Installation bis zum erfolgreichen Projekteinsatz.
      </p>
    </div>
  </section>

  <SubNavigation items={subNavItems} currentPath={Astro.url.pathname} />

  <!-- Quick Start Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">
          Schneller Einstieg. Klare Ergebnisse. Kein Risiko.
        </h2>
        <p class="text-foreground/70 max-w-3xl mx-auto">
          Starten Sie mit unserer <strong>30-Tage-Testlizenz</strong> und lassen Sie sich bei den ersten Schritten von unseren Experten begleiten.
          So erreichen Sie in kürzester Zeit verwertbare Simulationsergebnisse – ohne lange Einarbeitung.
        </p>
      </div>

      <!-- Tab Buttons -->
      <div class="flex justify-center mb-12">
        <div class="inline-flex rounded-lg border border-foreground/20 p-1 bg-secondary/30">
          <button
            id="tab-trial"
            class="onboarding-tab px-6 py-3 rounded-md font-medium transition-all bg-primary text-background"
            data-tab="trial"
          >
            Testversion
          </button>
          <button
            id="tab-onboarding"
            class="onboarding-tab px-6 py-3 rounded-md font-medium transition-all text-foreground/70 hover:text-foreground"
            data-tab="onboarding"
          >
            Easy onboarding
          </button>
        </div>
      </div>

      <!-- Trial Version Content -->
      <div id="content-trial" class="onboarding-content">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold text-primary mb-2">Kostenlose 30-Tage-Testversion</h3>
            <p class="text-foreground/70">Testen Sie den vollen Funktionsumfang ohne Einschränkungen</p>
          </div>

          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                1
              </div>
              <h4 class="font-semibold text-foreground mb-2">Download</h4>
              <p class="text-foreground/70 text-sm">Software herunterladen und installieren</p>
            </div>
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                2
              </div>
              <h4 class="font-semibold text-foreground mb-2">Registrieren</h4>
              <p class="text-foreground/70 text-sm">Testlizenz aktivieren und loslegen</p>
            </div>
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                3
              </div>
              <h4 class="font-semibold text-foreground mb-2">Testen</h4>
              <p class="text-foreground/70 text-sm">30 Tage alle Funktionen nutzen</p>
            </div>
          </div>

          <div class="card bg-background border-primary/30 text-center">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
              <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-lg bg-primary/20 flex items-center justify-center">
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-semibold text-foreground">VICUS DISTRICTS</div>
                  <div class="text-sm text-foreground/60">Windows 10/11 | 64-bit</div>
                </div>
              </div>
              <a href={url(`/${lang}/demo`)} class="btn btn-primary whitespace-nowrap">
                Testversion anfragen
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Easy Onboarding Content -->
      <div id="content-onboarding" class="onboarding-content hidden">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold text-primary mb-2">Ihr individuelles Onboarding (600 €)</h3>
            <p class="text-foreground/70">Von unseren Experten begleitet zum Erfolg</p>
          </div>

          <div class="card mb-8">
            <h4 class="text-xl font-semibold text-foreground mb-6">Einfacher Start – Von unseren Experten begleitet</h4>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Woche 1:</span>
                <span class="text-foreground/80">Einfacher Start dank umfangreicher Schulungsvideos</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Woche 2:</span>
                <span class="text-foreground/80">Follow-up & Fragen (1 Stunde)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Woche 4:</span>
                <span class="text-foreground/80">Follow-up & Fragen (1 Stunde)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Woche 5-6:</span>
                <span class="text-foreground/80">Sie entscheiden</span>
              </li>
            </ul>

            <div class="space-y-3 mb-8">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-foreground/80">
                  <strong class="text-primary">Sie entscheiden sich für eine Jahreslizenz?</strong> → Das Onboarding wird vollständig angerechnet.
                </span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="text-foreground/80">
                  <strong class="text-red-400">Sie sind nicht überzeugt?</strong> → Das Onboarding wird als Dienstleistung abgerechnet.
                </span>
              </div>
            </div>

            <div class="border-t border-foreground/10 pt-6">
              <h5 class="font-semibold text-foreground mb-4">Maximale Sicherheit – Geringer Aufwand</h5>
              <ul class="space-y-2">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-foreground/80">Volle Kostentransparenz</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-foreground/80">Minimale Risiken</span>
                </li>
              </ul>
            </div>

            <div class="mt-8">
              <a href={url(`/${lang}/kontakt`)} class="btn btn-primary">
                Onboarding buchen
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Individual Support Section -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="text-center mb-8">
        <p class="text-primary text-sm font-medium mb-2">Individueller Support</p>
        <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">
          Wir unterstützen Sie bei Ihrer Wärmenetzplanung
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-foreground/70 max-w-3xl mx-auto">
          Sie benötigen Unterstützung bei Ihrem Wärmenetzprojekt? Wir beraten Sie gern direkt mit unserem Expertenteam.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              Wir erstellen ein <strong>rechenfähiges Wärmenetzmodell Ihres Bestandsnetzes</strong> (Digitaler Zwilling)
            </span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              Wir führen <strong>Variantenstudien</strong> für Sie durch
            </span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              Wir erstellen <strong>BEW-konforme Machbarkeitsstudien</strong>
            </span>
          </li>
        </ul>

        <div class="mt-8 text-center">
          <a href={url(`/${lang}/kontakt`)} class="btn btn-primary">
            Beratung anfragen
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-foreground mb-6">Ihr Ansprechpartner</h2>
          <p class="text-foreground/70 mb-8">
            Haben Sie Fragen zur Software oder benötigen Sie Unterstützung bei der Einrichtung?
            Unser Expertenteam hilft Ihnen gerne weiter.
          </p>

          <div class="card">
            <div class="flex items-start gap-4">
              <div class="w-20 h-20 rounded-full bg-secondary flex items-center justify-center overflow-hidden flex-shrink-0">
                <svg class="w-12 h-12 text-foreground/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-foreground text-lg">Dr. Christoph Morbitzer</h3>
                <p class="text-foreground/60 mb-3">Technischer Vertrieb & Schulungen</p>
                <div class="space-y-2 text-sm">
                  <a href="mailto:morbitzer@vicus-software.com" class="flex items-center gap-2 text-foreground/70 hover:text-primary transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    morbitzer@vicus-software.com
                  </a>
                  <a href="tel:+4936143050" class="flex items-center gap-2 text-foreground/70 hover:text-primary transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    +49 361 43050
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-foreground mb-6">Kontakt aufnehmen</h2>
          <p class="text-foreground/70 mb-8">
            Schreiben Sie uns – wir melden uns zeitnah bei Ihnen.
          </p>

          <div class="card">
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.name')} *</label>
                <input type="text" required class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.email')} *</label>
                <input type="email" required class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.company')}</label>
                <input type="text" class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.message')}</label>
                <textarea rows="3" class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none resize-none"></textarea>
              </div>

              <button type="submit" class="btn btn-primary w-full">
                Nachricht senden
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Resources -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Hilfreiche Ressourcen</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href={url(`/${lang}/tutorials-hilfe`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">Video-Tutorials</h3>
          <p class="text-foreground/70 text-sm">Schritt-für-Schritt Anleitungen für den Einstieg.</p>
        </a>

        <a href={url(`/${lang}/dokumentation`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">Dokumentation</h3>
          <p class="text-foreground/70 text-sm">Ausführliche technische Dokumentation.</p>
        </a>

        <a href={url(`/${lang}/vicus-districts/faq`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">FAQ</h3>
          <p class="text-foreground/70 text-sm">Antworten auf häufig gestellte Fragen.</p>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  const tabs = document.querySelectorAll('.onboarding-tab');
  const contents = document.querySelectorAll('.onboarding-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetTab = tab.getAttribute('data-tab');

      // Update tab styles
      tabs.forEach(t => {
        if (t.getAttribute('data-tab') === targetTab) {
          t.classList.add('bg-primary', 'text-background');
          t.classList.remove('text-foreground/70', 'hover:text-foreground');
        } else {
          t.classList.remove('bg-primary', 'text-background');
          t.classList.add('text-foreground/70', 'hover:text-foreground');
        }
      });

      // Update content visibility
      contents.forEach(content => {
        if (content.id === `content-${targetTab}`) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });
    });
  });
</script>
