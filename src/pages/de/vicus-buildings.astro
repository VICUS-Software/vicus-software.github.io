---
import PageLayout from '../../layouts/PageLayout.astro';
import Features from '../../components/Features.astro';
import { useTranslations , url } from '../../i18n/utils';

const lang = 'de';
const t = useTranslations(lang);

const features = [
  {
    icon: 'energy',
    title: 'Thermische Simulation',
    description: 'Detaillierte Berechnung von Wärmeströmen, Speichermassen und dynamischem thermischen Verhalten.'
  },
  {
    icon: 'comfort',
    title: 'Komfortbewertung',
    description: 'Analyse von Raumtemperaturen, Luftfeuchte und thermischem Komfort nach aktuellen Normen.'
  },
  {
    icon: 'simulation',
    title: 'Energiebilanz',
    description: 'Präzise Berechnung von Heiz- und Kühlbedarf über das gesamte Jahr.'
  },
  {
    icon: 'network',
    title: 'HVAC-Simulation',
    description: 'Modellierung von Heizungs-, Lüftungs- und Klimaanlagen für optimale Systemauslegung.'
  },
  {
    icon: 'sustainability',
    title: 'CO2-Bilanzierung',
    description: 'Ermittlung der Treibhausgasemissionen für Nachhaltigkeitsbewertungen.'
  },
  {
    icon: 'gis',
    title: '3D-Modellierung',
    description: 'Intuitive 3D-Geometrieerstellung und Import aus IFC/gbXML.'
  }
];

const useCases = [
  'Energetische Sanierungsplanung',
  'Neubauplanung und Optimierung',
  'Nachhaltigkeitszertifizierungen (DGNB, LEED, BREEAM)',
  'Sommerlicher Wärmeschutz nach DIN 4108-2',
  'Wärmebrückenberechnung',
  'Forschung und Entwicklung'
];
---

<PageLayout
  title="VICUS BUILDINGS"
  description="Professionelle Software für thermische Gebäudesimulation. Energieeffizienz, Komfortanalyse und nachhaltige Planung."
  heroSubtitle="Professionelle Software für thermische Gebäudesimulation"
>
  <!-- Screenshot Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-foreground mb-6">Leistungsstarke Gebäudesimulation</h2>
          <p class="text-foreground/70 mb-6">
            VICUS BUILDINGS ist eine professionelle Software für die dynamische thermische Gebäudesimulation.
            Basierend auf dem bewährten NANDRAD-Simulationskern ermöglicht sie präzise Analysen des
            Energieverbrauchs und des thermischen Komforts.
          </p>
          <p class="text-foreground/70 mb-8">
            Mit der integrierten 3D-Modellierungsumgebung erstellen Sie Gebäudemodelle effizient und intuitiv.
            Die Software unterstützt den Import von IFC- und gbXML-Dateien für nahtlose BIM-Workflows.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/de/demo" class="btn btn-primary">{t('btn.demo')}</a>
            <a href="/de/tutorials-hilfe" class="btn btn-secondary">{t('btn.learnMore')}</a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-buildings-main.png"
              alt="VICUS BUILDINGS Screenshot"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <Features
    title="Funktionen"
    subtitle="Umfassende Werkzeuge für professionelle Gebäudesimulation"
    features={features}
  />

  <!-- Use Cases -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-buildings-results.png"
              alt="VICUS BUILDINGS Ergebnisdarstellung"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="text-foreground mb-6">Anwendungsbereiche</h2>
          <ul class="space-y-4">
            {useCases.map((useCase) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-foreground/80">{useCase}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">Jetzt VICUS BUILDINGS testen</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Überzeugen Sie sich selbst von den Möglichkeiten der professionellen Gebäudesimulation.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/de/demo" class="btn btn-primary">{t('btn.demo')}</a>
        <a href="/de/kontakt" class="btn btn-secondary">{t('btn.contact')}</a>
      </div>
    </div>
  </section>
</PageLayout>
