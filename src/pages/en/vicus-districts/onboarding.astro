---
import PageLayout from '../../../layouts/PageLayout.astro';
import SubNavigation from '../../../components/SubNavigation.astro';
import { useTranslations, url } from '../../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const subNavItems = [
  { label: t('districts.overview'), href: url(`/${lang}/vicus-districts`) },
  { label: t('districts.features'), href: url(`/${lang}/vicus-districts/features`) },
  { label: t('districts.license'), href: url(`/${lang}/vicus-districts/license`) },
  { label: t('districts.onboarding'), href: url(`/${lang}/vicus-districts/onboarding`) },
  { label: t('districts.comparison'), href: url(`/${lang}/vicus-districts/comparison`) },
  { label: t('districts.faq'), href: url(`/${lang}/vicus-districts/faq`) },
];
---

<PageLayout
  title="Onboarding | VICUS DISTRICTS"
  description="Get started with VICUS DISTRICTS: 30-day trial license, easy onboarding and individual support."
  showHero={false}
>
  <!-- Header -->
  <section class="pt-32 pb-8">
    <div class="container-custom text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Getting Started & Support</h1>
      <p class="text-xl text-foreground/70 max-w-3xl mx-auto">
        We accompany you from the first installation to successful project deployment.
      </p>
    </div>
  </section>

  <SubNavigation items={subNavItems} currentPath={Astro.url.pathname} />

  <!-- Quick Start Section -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">
          Quick Start. Clear Results. No Risk.
        </h2>
        <p class="text-foreground/70 max-w-3xl mx-auto">
          Start with our <strong>30-day trial license</strong> and let our experts guide you through the first steps.
          This way you achieve usable simulation results in no time – without lengthy training.
        </p>
      </div>

      <!-- Tab Buttons -->
      <div class="flex justify-center mb-12">
        <div class="inline-flex rounded-lg border border-foreground/20 p-1 bg-secondary/30">
          <button
            id="tab-trial"
            class="onboarding-tab px-6 py-3 rounded-md font-medium transition-all bg-primary text-background"
            data-tab="trial"
          >
            Trial Version
          </button>
          <button
            id="tab-onboarding"
            class="onboarding-tab px-6 py-3 rounded-md font-medium transition-all text-foreground/70 hover:text-foreground"
            data-tab="onboarding"
          >
            Easy Onboarding
          </button>
        </div>
      </div>

      <!-- Trial Version Content -->
      <div id="content-trial" class="onboarding-content">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold text-primary mb-2">Free 30-Day Trial Version</h3>
            <p class="text-foreground/70">Test the full functionality without restrictions</p>
          </div>

          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                1
              </div>
              <h4 class="font-semibold text-foreground mb-2">Download</h4>
              <p class="text-foreground/70 text-sm">Download and install the software</p>
            </div>
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                2
              </div>
              <h4 class="font-semibold text-foreground mb-2">Register</h4>
              <p class="text-foreground/70 text-sm">Activate trial license and get started</p>
            </div>
            <div class="card text-center">
              <div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center text-primary font-bold text-xl mx-auto mb-4">
                3
              </div>
              <h4 class="font-semibold text-foreground mb-2">Test</h4>
              <p class="text-foreground/70 text-sm">Use all features for 30 days</p>
            </div>
          </div>

          <div class="card bg-background border-primary/30 text-center">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
              <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-lg bg-primary/20 flex items-center justify-center">
                  <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-semibold text-foreground">VICUS DISTRICTS</div>
                  <div class="text-sm text-foreground/60">Windows 10/11 | 64-bit</div>
                </div>
              </div>
              <a href={url(`/${lang}/demo`)} class="btn btn-primary whitespace-nowrap">
                Request Trial Version
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Easy Onboarding Content -->
      <div id="content-onboarding" class="onboarding-content hidden">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold text-primary mb-2">Your Individual Onboarding (€600)</h3>
            <p class="text-foreground/70">Guided by our experts to success</p>
          </div>

          <div class="card mb-8">
            <h4 class="text-xl font-semibold text-foreground mb-6">Easy Start – Guided by Our Experts</h4>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Week 1:</span>
                <span class="text-foreground/80">Easy start with comprehensive training videos</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Week 2:</span>
                <span class="text-foreground/80">Follow-up & Questions (1 hour)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Week 4:</span>
                <span class="text-foreground/80">Follow-up & Questions (1 hour)</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="font-semibold text-primary min-w-[80px]">Week 5-6:</span>
                <span class="text-foreground/80">You decide</span>
              </li>
            </ul>

            <div class="space-y-3 mb-8">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-foreground/80">
                  <strong class="text-primary">You decide for an annual license?</strong> → The onboarding is fully credited.
                </span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="text-foreground/80">
                  <strong class="text-red-400">Not convinced?</strong> → The onboarding is billed as a service.
                </span>
              </div>
            </div>

            <div class="border-t border-foreground/10 pt-6">
              <h5 class="font-semibold text-foreground mb-4">Maximum Security – Minimal Effort</h5>
              <ul class="space-y-2">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-foreground/80">Full cost transparency</span>
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-foreground/80">Minimal risks</span>
                </li>
              </ul>
            </div>

            <div class="mt-8">
              <a href={url(`/${lang}/contact`)} class="btn btn-primary">
                Book Onboarding
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Individual Support Section -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="text-center mb-8">
        <p class="text-primary text-sm font-medium mb-2">Individual Support</p>
        <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">
          We Support You with Your Heating Network Planning
        </h2>
        <div class="w-24 h-1 bg-primary mx-auto mb-6"></div>
        <p class="text-foreground/70 max-w-3xl mx-auto">
          Need support with your heating network project? We're happy to advise you directly with our expert team.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              We create a <strong>calculation-ready heating network model of your existing network</strong> (Digital Twin)
            </span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              We conduct <strong>variant studies</strong> for you
            </span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-foreground/80">
              We create <strong>compliant feasibility studies</strong>
            </span>
          </li>
        </ul>

        <div class="mt-8 text-center">
          <a href={url(`/${lang}/contact`)} class="btn btn-primary">
            Request Consultation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div>
          <h2 class="text-foreground mb-6">Your Contact Person</h2>
          <p class="text-foreground/70 mb-8">
            Do you have questions about the software or need help with setup?
            Our expert team is happy to assist you.
          </p>

          <div class="card">
            <div class="flex items-start gap-4">
              <div class="w-20 h-20 rounded-full bg-secondary flex items-center justify-center overflow-hidden flex-shrink-0">
                <svg class="w-12 h-12 text-foreground/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-foreground text-lg">Dr. Christoph Morbitzer</h3>
                <p class="text-foreground/60 mb-3">Technical Sales & Training</p>
                <div class="space-y-2 text-sm">
                  <a href="mailto:morbitzer@vicus-software.com" class="flex items-center gap-2 text-foreground/70 hover:text-primary transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    morbitzer@vicus-software.com
                  </a>
                  <a href="tel:+4936143050" class="flex items-center gap-2 text-foreground/70 hover:text-primary transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    +49 361 43050
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-foreground mb-6">Get in Touch</h2>
          <p class="text-foreground/70 mb-8">
            Write to us – we'll get back to you promptly.
          </p>

          <div class="card">
            <form class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.firstname')} *</label>
                  <input type="text" required class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.lastname')} *</label>
                  <input type="text" required class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
                </div>
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.email')} *</label>
                <input type="email" required class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.company')}</label>
                <input type="text" class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none" />
              </div>

              <div>
                <label class="block text-sm font-medium text-foreground/80 mb-1">{t('form.message')}</label>
                <textarea rows="3" class="w-full bg-background border border-foreground/20 rounded-lg px-4 py-2 text-foreground focus:border-primary focus:outline-none resize-none"></textarea>
              </div>

              <button type="submit" class="btn btn-primary w-full">
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Resources -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Helpful Resources</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href={url(`/${lang}/tutorials-help`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">Video Tutorials</h3>
          <p class="text-foreground/70 text-sm">Step-by-step guides to get started.</p>
        </a>

        <a href={url(`/${lang}/documentation`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">Documentation</h3>
          <p class="text-foreground/70 text-sm">Comprehensive technical documentation.</p>
        </a>

        <a href={url(`/${lang}/vicus-districts/faq`)} class="card hover-lift group">
          <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">FAQ</h3>
          <p class="text-foreground/70 text-sm">Answers to frequently asked questions.</p>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  const tabs = document.querySelectorAll('.onboarding-tab');
  const contents = document.querySelectorAll('.onboarding-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetTab = tab.getAttribute('data-tab');

      // Update tab styles
      tabs.forEach(t => {
        if (t.getAttribute('data-tab') === targetTab) {
          t.classList.add('bg-primary', 'text-background');
          t.classList.remove('text-foreground/70', 'hover:text-foreground');
        } else {
          t.classList.remove('bg-primary', 'text-background');
          t.classList.add('text-foreground/70', 'hover:text-foreground');
        }
      });

      // Update content visibility
      contents.forEach(content => {
        if (content.id === `content-${targetTab}`) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });
    });
  });
</script>
