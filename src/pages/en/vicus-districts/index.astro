---
import PageLayout from '../../../layouts/PageLayout.astro';
import SubNavigation from '../../../components/SubNavigation.astro';
import ProductHero from '../../../components/ProductHero.astro';
import { useTranslations, url } from '../../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const subNavItems = [
  { label: t('districts.overview'), href: url(`/${lang}/vicus-districts`) },
  { label: t('districts.features'), href: url(`/${lang}/vicus-districts/features`) },
  { label: t('districts.license'), href: url(`/${lang}/vicus-districts/license`) },
  { label: t('districts.onboarding'), href: url(`/${lang}/vicus-districts/onboarding`) },
  { label: t('districts.comparison'), href: url(`/${lang}/vicus-districts/comparison`) },
  { label: t('districts.faq'), href: url(`/${lang}/vicus-districts/faq`) },
];

const mainBenefits = [
  {
    title: 'Digital Interfaces',
    description: 'Import GIS data, load profiles and pipe databases. Export for documentation and further processing.',
    icon: 'data'
  },
  {
    title: 'Easy Planning',
    description: 'Intuitive interface for fast network planning. From sketch to complete concept in no time.',
    icon: 'design'
  },
  {
    title: 'Dynamic Simulation',
    description: 'Thermo-hydraulic annual simulation for precise design and optimization of your heating network.',
    icon: 'simulation'
  },
  {
    title: 'Modern Interface',
    description: 'Clear visualization of complex networks. 3D display and interactive results analysis.',
    icon: 'interface'
  }
];

const customerLogos = [
  { name: 'REHAU', src: '/images/logos/rehau.png' },
  { name: 'T&K', src: '/images/logos/tk.png' },
  { name: 'Stadtwerke Meiningen', src: '/images/logos/stadtwerke-meiningen.png' },
  { name: 'Goodmen Energy', src: '/images/logos/goodmen.png' },
  { name: 'I pro K', src: '/images/logos/iprok.png' },
];
---

<PageLayout
  title="VICUS DISTRICTS"
  description="The software for your heating network planning. Intuitive. Fast. Simulation-based."
  showHero={false}
>
  <ProductHero
    product="districts"
    headline="Intelligent Heat Network Planning"
    subheadline="Intuitive. Fast. Simulation-based."
    description="With <strong>VICUS DISTRICTS</strong> you plan and simulate heat networks efficiently â€“ from the initial concept phase to detailed design."
    screenshot="/images/screenshots/vicus-districts-gui.png"
    screenshotAlt="VICUS DISTRICTS Screenshot"
    primaryBtnText={t('districts.testLicense')}
    primaryBtnHref={url(`/${lang}/vicus-districts/onboarding`)}
    secondaryBtnText={t('btn.demo')}
    secondaryBtnHref={url(`/${lang}/demo`)}
  />

  <SubNavigation items={subNavItems} currentPath={Astro.url.pathname} />

  <!-- Customer Logos -->
  <section class="py-12 bg-foreground">
    <div class="container-custom">
      <p class="text-center text-background/60 text-sm mb-8">Trusted by leading companies</p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
        {customerLogos.map((logo) => (
          <div class="h-8 md:h-10 grayscale hover:grayscale-0 transition-all opacity-80 hover:opacity-100">
            <img src={logo.src} alt={logo.name} class="h-full w-auto object-contain" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Benefits -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Why VICUS DISTRICTS?</h2>
        <p class="text-xl text-foreground/70 max-w-3xl mx-auto">
          Everything you need for professional heating network planning - in one software.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {mainBenefits.map((benefit) => (
          <div class="card hover-lift group">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4 group-hover:bg-primary/30 transition-colors">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {benefit.icon === 'data' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                )}
                {benefit.icon === 'design' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                )}
                {benefit.icon === 'simulation' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                )}
                {benefit.icon === 'interface' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                )}
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">{benefit.title}</h3>
            <p class="text-foreground/70 text-sm">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshot Section -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-foreground mb-6">Intelligent Heating Network Planning</h2>
          <p class="text-foreground/70 mb-6">
            VICUS DISTRICTS is the specialized solution for planning and simulating heating networks.
            From the first concept phase to detailed network design, the software supports you
            in all steps of district planning.
          </p>
          <p class="text-foreground/70 mb-8">
            The integrated GIS functionality enables direct work with geodata.
            Combined with powerful thermo-hydraulic simulation, you get
            precise results for your network planning.
          </p>
          <a href={url(`/${lang}/vicus-districts/features`)} class="btn btn-primary">
            Discover all features
          </a>
        </div>
        <div class="relative">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-districts-example.png"
              alt="VICUS DISTRICTS Screenshot"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links to Subpages -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Learn More</h2>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href={url(`/${lang}/vicus-districts/features`)} class="card hover-lift group">
          <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
            Features
          </h3>
          <p class="text-foreground/70 text-sm">Detailed overview of all features and capabilities.</p>
        </a>

        <a href={url(`/${lang}/vicus-districts/license`)} class="card hover-lift group">
          <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
            Pricing & Licenses
          </h3>
          <p class="text-foreground/70 text-sm">Flexible license models for every project size.</p>
        </a>

        <a href={url(`/${lang}/vicus-districts/comparison`)} class="card hover-lift group">
          <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
            Comparison
          </h3>
          <p class="text-foreground/70 text-sm">How VICUS differs from other tools.</p>
        </a>

        <a href={url(`/${lang}/vicus-districts/faq`)} class="card hover-lift group">
          <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
            FAQ
          </h3>
          <p class="text-foreground/70 text-sm">Answers to frequently asked questions.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">Ready for better heating network planning?</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Start with a free 30-day trial and see for yourself.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={url(`/${lang}/vicus-districts/onboarding`)} class="btn btn-primary">
          {t('districts.testLicense')}
        </a>
        <a href={url(`/${lang}/contact`)} class="btn btn-secondary">
          {t('btn.contact')}
        </a>
      </div>
    </div>
  </section>
</PageLayout>
