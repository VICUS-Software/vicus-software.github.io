---
import PageLayout from '../../../layouts/PageLayout.astro';
import SubNavigation from '../../../components/SubNavigation.astro';
import ComparisonTable from '../../../components/ComparisonTable.astro';
import { useTranslations, url } from '../../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const subNavItems = [
  { label: t('districts.overview'), href: url(`/${lang}/vicus-districts`) },
  { label: t('districts.features'), href: url(`/${lang}/vicus-districts/features`) },
  { label: t('districts.license'), href: url(`/${lang}/vicus-districts/license`) },
  { label: t('districts.onboarding'), href: url(`/${lang}/vicus-districts/onboarding`) },
  { label: t('districts.comparison'), href: url(`/${lang}/vicus-districts/comparison`) },
  { label: t('districts.faq'), href: url(`/${lang}/vicus-districts/faq`) },
];

const comparisonItems = [
  { feature: 'Target audience', values: ['Strategic planning', 'Strategic planning', 'Detailed design'] },
  { feature: 'Network drawing', values: ['Simplified', 'Simplified', 'Detailed'] },
  { feature: 'GIS integration', values: [true, true, true] },
  { feature: 'Hydraulic calculation', values: ['Simplified', 'Simplified', 'Detailed'] },
  { feature: 'Dynamic simulation', values: [false, false, true] },
  { feature: 'Pressure loss calculation', values: ['Estimation', 'Estimation', 'Exact'] },
  { feature: 'Heat loss calculation', values: ['Estimation', 'Estimation', 'Dynamic'] },
  { feature: 'Pump sizing', values: [false, false, true] },
  { feature: 'Bill of materials', values: [false, false, true] },
  { feature: 'Economic analysis', values: [true, true, 'Export'] },
];

const toolCategories = [
  {
    title: 'Strategic Planning Tools',
    subtitle: 'nPro, Thermos and similar',
    description: 'These tools are optimized for early planning phases and strategic decisions. They enable quick estimates of economic viability and initial feasibility studies.',
    strengths: [
      'Quick creation of network concepts',
      'Automatic route finding',
      'Integrated economic calculations',
      'Good for funding applications'
    ],
    weaknesses: [
      'Simplified hydraulic models',
      'No dynamic simulation',
      'Limited level of detail',
      'No precise sizing possible'
    ]
  },
  {
    title: 'Classic Expert Software',
    subtitle: 'STANET and similar',
    description: 'Established software for utility networks with extensive calculation capabilities, but steep learning curve and complex operation.',
    strengths: [
      'Very detailed calculations',
      'Years of development',
      'Extensive standards coverage',
      'Wide range of applications (gas, water, heat)'
    ],
    weaknesses: [
      'Complex operation',
      'High training effort',
      'Outdated user interface',
      'High license costs'
    ]
  },
  {
    title: 'VICUS DISTRICTS',
    subtitle: 'The best of both worlds',
    description: 'VICUS DISTRICTS combines intuitive operation with precise dynamic simulation. Ideal for detailed design of heating networks.',
    strengths: [
      'Intuitive, modern interface',
      'Dynamic thermo-hydraulic simulation',
      'Precise design for every project phase',
      'Flexible license models',
      'Active development',
      'Personal support'
    ],
    weaknesses: [
      'Specialized for heating networks',
      'No integrated economic calculation (export possible)'
    ]
  }
];
---

<PageLayout
  title="Comparison | VICUS DISTRICTS"
  description="Comparison of VICUS DISTRICTS with other planning tools for heating networks. Find the right software for your requirements."
  showHero={false}
>
  <!-- Header -->
  <section class="pt-32 pb-8">
    <div class="container-custom">
      <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Comparison with Other Tools</h1>
      <p class="text-xl text-foreground/70 max-w-3xl">
        The right software for the right planning phase: Understand the differences between strategic
        planning tools and detailed design software.
      </p>
    </div>
  </section>

  <SubNavigation items={subNavItems} currentPath={Astro.url.pathname} />

  <!-- Introduction -->
  <section class="section">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="card bg-primary/10 border-primary/30 mb-8">
          <h2 class="text-xl font-semibold text-foreground mb-4">The right software for every planning phase</h2>
          <p class="text-foreground/70">
            Various software tools are used in heating network planning. Strategic planning tools
            like nPro or Thermos are suitable for initial feasibility studies and concept development. For detailed
            design and precise hydraulic calculations, VICUS DISTRICTS is the right choice.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  <ComparisonTable
    title="Feature Comparison"
    subtitle="Early planning tools vs. VICUS DISTRICTS"
    headers={['nPro', 'Thermos', 'VICUS Districts']}
    items={comparisonItems}
    footnote="As of 2024. Information without guarantee."
  />

  <!-- Tool Categories -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-foreground mb-4">Detailed Analysis</h2>
      </div>

      <div class="space-y-8">
        {toolCategories.map((category, index) => (
          <div class:list={[
            "card",
            index === toolCategories.length - 1 && "bg-primary/10 border-primary/30"
          ]}>
            <div class="flex flex-col lg:flex-row gap-8">
              <div class="lg:w-1/3">
                <h3 class="text-xl font-semibold text-foreground mb-1">{category.title}</h3>
                <p class="text-primary text-sm mb-4">{category.subtitle}</p>
                <p class="text-foreground/70">{category.description}</p>
              </div>

              <div class="lg:w-2/3 grid md:grid-cols-2 gap-6">
                <div>
                  <h4 class="text-sm font-semibold text-primary mb-3">Strengths</h4>
                  <ul class="space-y-2">
                    {category.strengths.map((strength) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-foreground/80">{strength}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div>
                  <h4 class="text-sm font-semibold text-foreground/50 mb-3">Limitations</h4>
                  <ul class="space-y-2">
                    {category.weaknesses.map((weakness) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-foreground/30 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                        </svg>
                        <span class="text-foreground/60">{weakness}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why VICUS -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-foreground mb-4">Why choose VICUS DISTRICTS?</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Precision without complexity</h3>
            <p class="text-foreground/70 text-sm">
              Dynamic simulation and exact calculations, but with an intuitive interface
              that makes getting started easy.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Modern development</h3>
            <p class="text-foreground/70 text-sm">
              Regular updates, modern technologies and active development based
              on user feedback.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Personal support</h3>
            <p class="text-foreground/70 text-sm">
              Direct contact with developers, quick help with questions and
              individual training.
            </p>
          </div>

          <div class="card">
            <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Fair pricing</h3>
            <p class="text-foreground/70 text-sm">
              Flexible license models that adapt to your project size.
              Free trial version and educational licenses.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">See for yourself</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Try VICUS DISTRICTS free for 30 days and compare for yourself.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={url(`/${lang}/vicus-districts/onboarding`)} class="btn btn-primary">
          {t('districts.testLicense')}
        </a>
        <a href={url(`/${lang}/demo`)} class="btn btn-secondary">
          {t('btn.demo')}
        </a>
      </div>
    </div>
  </section>
</PageLayout>
