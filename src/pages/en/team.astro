---
import PageLayout from '../../layouts/PageLayout.astro';
import TeamMember from '../../components/TeamMember.astro';
import { useTranslations, url } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const teamMembers = [
  {
    name: 'Dr. Hauke Hirsch',
    title: 'Chief Executive Officer (CEO)',
    image: '/images/team/hauke-hirsch.jpg',
    bio: 'Expert in heat network simulation and software development. Hauke leads VICUS Software with passion for energy efficiency and sustainable energy supply.',
    email: 'hauke.hirsch@vicus-software.de'
  },
  {
    name: 'Dr. Andreas Nicolai',
    title: 'Chief Technology Officer (CTO)',
    image: '/images/team/andreas-nicolai.jpg',
    bio: 'Developer of the solver and 3D engine. Andreas brings years of experience in numerical simulation and software architecture.',
    email: 'andreas.nicolai@vicus-software.de'
  },
  {
    name: 'Dr. Christoph Morbitzer',
    title: 'Chief Business Development Officer (CBDO)',
    image: '/images/team/christoph-morbitzer.jpg',
    bio: 'Responsible for business development and sales management. Christoph combines technical expertise with customer orientation.',
    email: 'christoph.morbitzer@vicus-software.de'
  },
  {
    name: 'Stephan Hirth',
    title: 'Software & Simulation Expert',
    image: '/images/team/stephan-hirth.jpg',
    bio: 'Responsible for graphics, design, and software development. Stephan ensures an intuitive user interface and appealing visualizations.',
    email: 'stephan.hirth@vicus-software.de'
  },
  {
    name: 'Heiko Fechner',
    title: 'Senior Simulation Expert',
    image: '/images/team/heiko-fechner.jpg',
    bio: 'With over 30 years of experience in building simulation, Heiko brings valuable expertise to complex simulation projects.',
    email: 'heiko.fechner@vicus-software.de'
  },
  {
    name: 'Dirk Wei√ü',
    title: 'Building Simulation Expert',
    image: '/images/team/dirk-weiss.jpg',
    bio: 'Specialist in building simulation and thermal analysis. Dirk supports the development and validation of our simulation models.',
    email: 'dirk.weiss@vicus-software.de'
  }
];
---

<PageLayout
  title={t('page.team.title')}
  description="Meet the team behind VICUS Software."
  heroSubtitle={t('page.team.subtitle')}
  heroCenter={true}
>
  <!-- Team Grid -->
  <section class="section">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <TeamMember
            name={member.name}
            title={member.title}
            image={member.image}
            bio={member.bio}
            email={member.email}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">{t('page.team.joinUs')}</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        {t('page.team.joinUsText')}
      </p>
      <a href={url(`/${lang}/careers`)} class="btn btn-primary">
        {t('nav.careers')}
      </a>
    </div>
  </section>
</PageLayout>
