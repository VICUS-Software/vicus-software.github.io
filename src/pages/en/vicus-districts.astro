---
import PageLayout from '../../layouts/PageLayout.astro';
import Features from '../../components/Features.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

const features = [
  {
    icon: 'network',
    title: 'Heat Network Planning',
    description: 'Efficient planning and sizing of heat distribution networks for districts and cities.'
  },
  {
    icon: 'simulation',
    title: 'Thermohydraulic Simulation',
    description: 'Precise calculation of pressure losses, mass flows, and temperatures in the network.'
  },
  {
    icon: 'gis',
    title: 'GIS Integration',
    description: 'Seamless connection with geodata for location-based network planning.'
  },
  {
    icon: 'energy',
    title: 'Load Profile Analysis',
    description: 'Determination and aggregation of heat demand profiles for optimal network design.'
  },
  {
    icon: 'sustainability',
    title: 'Renewable Integration',
    description: 'Integration of solar thermal, heat pumps, and other renewable sources.'
  },
  {
    icon: 'comfort',
    title: 'Economic Analysis',
    description: 'Evaluation of investment and operating costs for informed decisions.'
  }
];

const networkTypes = [
  'District heating networks',
  'Local heating networks',
  'Cold district heating',
  'Waste heat utilization',
  'Sector coupling',
  'Smart district heating'
];
---

<PageLayout
  title="VICUS DISTRICTS"
  description="Software for heat network planning and district energy. Thermohydraulic simulation and GIS integration."
  heroSubtitle="Specialized software for heat networks and district planning"
>
  <!-- Screenshot Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-foreground mb-6">Intelligent Heat Network Planning</h2>
          <p class="text-foreground/70 mb-6">
            VICUS DISTRICTS is the specialized solution for planning and simulating heat networks.
            From the initial concept phase to detailed network design, the software supports you
            in all steps of district planning.
          </p>
          <p class="text-foreground/70 mb-8">
            The integrated GIS functionality enables direct work with geodata.
            Combined with the powerful thermohydraulic simulation, you get
            precise results for your network planning.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/en/demo" class="btn btn-primary">{t('btn.demo')}</a>
            <a href="/en/tutorials-help" class="btn btn-secondary">{t('btn.learnMore')}</a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-districts-main.png"
              alt="VICUS DISTRICTS Screenshot"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <Features
    title="Features"
    subtitle="Specialized tools for efficient heat network planning"
    features={features}
  />

  <!-- Network Types -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <div class="aspect-video rounded-xl overflow-hidden bg-secondary/50 border border-primary/20">
            <img
              src="/images/screenshots/vicus-districts-network.png"
              alt="VICUS DISTRICTS Network"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="text-foreground mb-6">Network Types</h2>
          <p class="text-foreground/70 mb-6">
            VICUS DISTRICTS supports various heat network concepts and enables
            the planning of future-proof energy supply solutions.
          </p>
          <ul class="space-y-4">
            {networkTypes.map((type) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-foreground/80">{type}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-secondary/30">
    <div class="container-custom text-center">
      <h2 class="text-foreground mb-4">Try VICUS DISTRICTS Now</h2>
      <p class="text-xl text-foreground/70 max-w-2xl mx-auto mb-8">
        Discover the possibilities of professional heat network planning.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/en/demo" class="btn btn-primary">{t('btn.demo')}</a>
        <a href="/en/contact" class="btn btn-secondary">{t('btn.contact')}</a>
      </div>
    </div>
  </section>
</PageLayout>
