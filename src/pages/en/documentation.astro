---
import PageLayout from '../../layouts/PageLayout.astro';

const sections = [
  {
    title: 'Getting Started',
    description: 'Installation and basic setup of VICUS software',
    icon: 'rocket',
    articles: [
      { title: 'Installation on Windows', href: '/en/documentation/installation-windows' },
      { title: 'Installation on Linux', href: '/en/documentation/installation-linux' },
      { title: 'First Project Setup', href: '/en/documentation/getting-started' },
      { title: 'User Interface Overview', href: '/en/documentation/user-interface' },
    ]
  },
  {
    title: 'VICUS BUILDINGS',
    description: 'Guides for building simulation',
    icon: 'building',
    articles: [
      { title: 'Creating Building Geometry', href: '/en/documentation/buildings/geometry' },
      { title: 'Defining Constructions', href: '/en/documentation/buildings/constructions' },
      { title: 'Room Zones and Usage Profiles', href: '/en/documentation/buildings/zones' },
      { title: 'Climate Data and Location', href: '/en/documentation/buildings/climate' },
      { title: 'Running Simulations', href: '/en/documentation/buildings/simulation' },
      { title: 'Analyzing Results', href: '/en/documentation/buildings/results' },
    ]
  },
  {
    title: 'VICUS DISTRICTS',
    description: 'Guides for heat network planning',
    icon: 'network',
    articles: [
      { title: 'Creating a Network', href: '/en/documentation/districts/create-network' },
      { title: 'Pipe Sizing', href: '/en/documentation/districts/pipe-sizing' },
      { title: 'Defining Heat Sources', href: '/en/documentation/districts/heat-sources' },
      { title: 'Configuring Substations', href: '/en/documentation/districts/substations' },
      { title: 'Steady-State Calculation', href: '/en/documentation/districts/steady-state' },
      { title: 'Dynamic Simulation', href: '/en/documentation/districts/dynamic-simulation' },
      { title: 'Result Analysis', href: '/en/documentation/districts/results' },
    ]
  },
  {
    title: 'Import & Export',
    description: 'Data formats and interfaces',
    icon: 'exchange',
    articles: [
      { title: 'DXF Import', href: '/en/documentation/import-export/dxf' },
      { title: 'PDF Import', href: '/en/documentation/import-export/pdf' },
      { title: 'GIS Data Import', href: '/en/documentation/import-export/gis' },
      { title: 'Exporting Results', href: '/en/documentation/import-export/export' },
    ]
  },
  {
    title: 'Reference',
    description: 'Technical reference and background information',
    icon: 'book',
    articles: [
      { title: 'Calculation Methods', href: '/en/documentation/reference/calculation-methods' },
      { title: 'Material Database', href: '/en/documentation/reference/materials' },
      { title: 'Keyboard Shortcuts', href: '/en/documentation/reference/shortcuts' },
      { title: 'Troubleshooting', href: '/en/documentation/reference/troubleshooting' },
    ]
  },
];

const getIcon = (icon: string) => {
  const icons: Record<string, string> = {
    rocket: 'M13 10V3L4 14h7v7l9-11h-7z',
    building: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
    network: 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z',
    exchange: 'M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4',
    book: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  };
  return icons[icon] || icons.book;
};
---

<PageLayout
  title="Documentation"
  description="Comprehensive guides and documentation for VICUS BUILDINGS and VICUS DISTRICTS software."
  heroSubtitle="Guides and References"
>
  <!-- Search Bar -->
  <section class="pt-8 pb-0">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto">
        <div class="relative">
          <input
            type="text"
            id="doc-search"
            placeholder="Search documentation..."
            class="w-full px-4 py-3 pl-12 rounded-lg bg-secondary border border-foreground/10 text-foreground placeholder:text-foreground/50 focus:outline-none focus:border-primary"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="section pb-8">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/en/documentation/installation-windows" class="card group text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2">Download & Installation</h3>
          <p class="text-sm text-foreground/70">Download and set up the software</p>
        </a>
        <a href="/en/tutorials-help" class="card group text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2">Video Tutorials</h3>
          <p class="text-sm text-foreground/70">Step-by-step video guides</p>
        </a>
        <a href="/en/contact" class="card group text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-foreground mb-2">Support</h3>
          <p class="text-sm text-foreground/70">Help from the VICUS team</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Documentation Sections -->
  {sections.map((section, index) => (
    <section class:list={["section pt-8", index % 2 === 1 ? "bg-secondary/30" : ""]}>
      <div class="container-custom">
        <div class="flex items-start gap-4 mb-8">
          <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIcon(section.icon)} />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-foreground">{section.title}</h2>
            <p class="text-foreground/70">{section.description}</p>
          </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {section.articles.map((article) => (
            <a
              href={article.href}
              class="flex items-center gap-3 p-4 rounded-lg bg-secondary/50 hover:bg-secondary border border-foreground/5 hover:border-primary/30 transition-all group"
            >
              <svg class="w-5 h-5 text-foreground/40 group-hover:text-primary transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-foreground group-hover:text-primary transition-colors">{article.title}</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- External Resources -->
  <section class="section bg-secondary/30">
    <div class="container-custom">
      <h2 class="text-2xl font-bold text-foreground text-center mb-8">External Resources</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a
          href="https://github.com/ghorwin/SIM-VICUS"
          target="_blank"
          rel="noopener noreferrer"
          class="card group"
        >
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-lg bg-foreground/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-foreground" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors">GitHub Repository</h3>
              <p class="text-sm text-foreground/70">Source code and issues</p>
            </div>
          </div>
        </a>
        <a
          href="https://www.youtube.com/@vicus-software"
          target="_blank"
          rel="noopener noreferrer"
          class="card group"
        >
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-lg bg-red-500/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors">YouTube Channel</h3>
              <p class="text-sm text-foreground/70">Video tutorials</p>
            </div>
          </div>
        </a>
        <a
          href="https://sim-vicus.de"
          target="_blank"
          rel="noopener noreferrer"
          class="card group"
        >
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-lg bg-tertiary/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors">SIM-VICUS Wiki</h3>
              <p class="text-sm text-foreground/70">Technical documentation</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  // Simple search functionality
  const searchInput = document.getElementById('doc-search') as HTMLInputElement;
  const articles = document.querySelectorAll('a[href^="/en/documentation/"]');

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase();

    articles.forEach((article) => {
      const text = article.textContent?.toLowerCase() || '';
      const parent = article.parentElement;
      if (parent) {
        if (query === '' || text.includes(query)) {
          (article as HTMLElement).style.display = '';
        } else {
          (article as HTMLElement).style.display = 'none';
        }
      }
    });
  });
</script>
