---
import { getLangFromUrl, getTranslatedPath, getAlternateLanguage } from '../i18n/utils';
import { languages, type Language } from '../i18n/languages';

const lang = getLangFromUrl(Astro.url) as Language;
const alternateLang = getAlternateLanguage(lang);
const currentPath = Astro.url.pathname;
const alternateHref = getTranslatedPath(currentPath, alternateLang);
---

<a
  href={alternateHref}
  class="flex items-center gap-2 px-3 py-2 rounded-lg text-foreground/70 hover:text-primary hover:bg-background/50 transition-colors"
  aria-label={`Switch to ${languages[alternateLang]}`}
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
  </svg>
  <span class="uppercase text-sm font-medium">{alternateLang}</span>
</a>
