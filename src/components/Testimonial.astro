---
interface Props {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  image?: string;
}

const { quote, author, role, company, image } = Astro.props;
---

<div class="bg-secondary/30 rounded-2xl p-8 md:p-12 border border-foreground/10">
  <div class="flex flex-col md:flex-row gap-6 md:gap-8 items-start">
    {image && (
      <div class="flex-shrink-0">
        <img
          src={image}
          alt={author}
          class="w-16 h-16 md:w-20 md:h-20 rounded-full object-cover border-2 border-primary/30"
          loading="lazy"
        />
      </div>
    )}

    <div class="flex-1">
      <svg class="w-10 h-10 text-primary/30 mb-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
      </svg>

      <blockquote class="text-lg md:text-xl text-foreground/90 mb-6 leading-relaxed">
        {quote}
      </blockquote>

      <div class="flex items-center gap-3">
        <div>
          <div class="font-semibold text-foreground">{author}</div>
          {(role || company) && (
            <div class="text-sm text-foreground/60">
              {role}{role && company && ', '}{company}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</div>
