---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import type { Language } from '../i18n/languages';
import { HUBSPOT_CONFIG } from '../config/hubspot';

const lang = getLangFromUrl(Astro.url) as Language;
const t = useTranslations(lang);
---

<form
  id="demo-form"
  class="space-y-6"
  data-hubspot-portal={HUBSPOT_CONFIG.portalId}
  data-hubspot-form={HUBSPOT_CONFIG.formIds.demo}
>
  <div class="grid md:grid-cols-2 gap-6">
    <div class="form-group">
      <label for="demo-name" class="form-label">
        {t('form.name')} <span class="text-primary">*</span>
      </label>
      <input
        type="text"
        id="demo-name"
        name="name"
        required
        class="form-input"
        placeholder={lang === 'de' ? 'Ihr Name' : 'Your name'}
      />
    </div>
    <div class="form-group">
      <label for="demo-email" class="form-label">
        {t('form.email')} <span class="text-primary">*</span>
      </label>
      <input
        type="email"
        id="demo-email"
        name="email"
        required
        class="form-input"
        placeholder={lang === 'de' ? 'ihre@email.de' : 'your@email.com'}
      />
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="form-group">
      <label for="demo-company" class="form-label">
        {t('form.company')} <span class="text-primary">*</span>
      </label>
      <input
        type="text"
        id="demo-company"
        name="company"
        required
        class="form-input"
        placeholder={lang === 'de' ? 'Firmenname' : 'Company name'}
      />
    </div>
    <div class="form-group">
      <label for="demo-phone" class="form-label">{t('form.phone')}</label>
      <input
        type="tel"
        id="demo-phone"
        name="phone"
        class="form-input"
        placeholder="+49 123 456 789"
      />
    </div>
  </div>

  <div class="form-group">
    <label for="demo-product" class="form-label">
      {lang === 'de' ? 'Produkt' : 'Product'} <span class="text-primary">*</span>
    </label>
    <select id="demo-product" name="product" required class="form-input">
      <option value="">{lang === 'de' ? 'Bitte wählen...' : 'Please select...'}</option>
      <option value="buildings">VICUS BUILDINGS</option>
      <option value="districts">VICUS DISTRICTS</option>
      <option value="both">{lang === 'de' ? 'Beide Produkte' : 'Both products'}</option>
    </select>
  </div>

  <div class="form-group">
    <label for="demo-message" class="form-label">{t('form.message')}</label>
    <textarea
      id="demo-message"
      name="message"
      rows="4"
      class="form-input resize-none"
      placeholder={lang === 'de' ? 'Erzählen Sie uns von Ihrem Projekt...' : 'Tell us about your project...'}
    ></textarea>
  </div>

  <div id="demo-form-status" class="hidden p-4 rounded-lg"></div>

  <button type="submit" class="btn btn-primary w-full md:w-auto">
    {t('btn.demo')}
  </button>
</form>

