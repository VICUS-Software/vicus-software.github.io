---
interface Props {
  name: string;
  title: string;
  image: string;
  bio: string;
  email?: string;
  linkedin?: string;
}

const { name, title, image, bio, email, linkedin } = Astro.props;
---

<div class="group relative bg-secondary/50 backdrop-blur-sm rounded-2xl p-8 border border-foreground/5 hover:border-primary/30 transition-all duration-300 hover:shadow-xl hover:shadow-primary/5">
  <!-- Image with gradient ring -->
  <div class="relative mb-8">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-primary/5 rounded-full blur-xl scale-90 group-hover:scale-100 transition-transform duration-300"></div>
    <div class="relative">
      <div class="w-56 h-56 mx-auto rounded-full p-1 bg-gradient-to-br from-primary/50 to-primary/10">
        <img
          src={image}
          alt={name}
          class="w-full h-full rounded-full object-cover bg-background grayscale group-hover:grayscale-0 transition-all duration-500"
          loading="lazy"
        />
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="text-center">
    <h3 class="text-2xl font-semibold text-foreground mb-2">{name}</h3>
    <p class="text-primary font-medium mb-4 text-lg">{title}</p>
    <p class="text-foreground/60 leading-relaxed">{bio}</p>
  </div>

  <!-- Contact links -->
  {(email || linkedin) && (
    <div class="flex justify-center gap-3 mt-6 pt-6 border-t border-foreground/10">
      {email && (
        <a
          href={`mailto:${email}`}
          class="w-11 h-11 rounded-xl bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-all duration-200 hover:scale-110"
          title={`E-Mail an ${name}`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      )}
      {linkedin && (
        <a
          href={linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="w-11 h-11 rounded-xl bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-all duration-200 hover:scale-110"
          title={`${name} auf LinkedIn`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
    </div>
  )}
</div>
