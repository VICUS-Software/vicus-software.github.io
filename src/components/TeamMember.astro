---
interface Props {
  name: string;
  title: string;
  image: string;
  bio: string;
  email?: string;
  linkedin?: string;
}

const { name, title, image, bio, email, linkedin } = Astro.props;
---

<div class="card hover-lift text-center">
  <div class="mb-6">
    <img
      src={image}
      alt={name}
      class="w-32 h-32 rounded-full mx-auto object-cover bg-background"
      loading="lazy"
    />
  </div>
  <h3 class="text-xl font-semibold text-foreground mb-1">{name}</h3>
  <p class="text-primary font-medium mb-4">{title}</p>
  <p class="text-foreground/70 mb-6">{bio}</p>
  {(email || linkedin) && (
    <div class="flex justify-center gap-4">
      {email && (
        <a
          href={`mailto:${email}`}
          class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
          title={`E-Mail an ${name}`}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      )}
      {linkedin && (
        <a
          href={linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors"
          title={`${name} auf LinkedIn`}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
    </div>
  )}
</div>
